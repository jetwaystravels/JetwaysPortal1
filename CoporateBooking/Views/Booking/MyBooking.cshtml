    <!-- My booking Search Filter Script -->
    <script>
        $(document).ready(function () {
            $('#search-input').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                var activeTab = $('.tab-pane.active');

                activeTab.find('tbody tr').each(function () {
                    var rowText = $(this).text().toLowerCase();
                    $(this).toggle(rowText.indexOf(searchText) > -1);
                });
            });

            // Refresh search results when tab changes
            $('a[data-toggle="pill"]').on('shown.bs.tab', function () {
                $('#search-input').trigger('keyup');
            });
        });
    </script>

    <!-- Cancel and Residual Script -->
    <script>
        document.querySelectorAll(".booking-row").forEach(row => {
            const confirmBox = row.querySelector(".confirm-box");
            const confirmText = row.querySelector(".confirm-text");
            const messageArea = row.querySelector(".message");

            let currentAction = "";

            row.querySelectorAll(".action-btn").forEach(button => {
                button.addEventListener("click", () => {
                    currentAction = button.dataset.action;

                    if (currentAction === "cancel") {
                        confirmText.textContent = "Are you sure you want to cancel this booking?";
                    } else if (currentAction === "residual") {
                        confirmText.textContent = "Are you sure you want to mark this booking as residual?";
                    }

                    confirmBox.style.display = "block";
                    messageArea.textContent = "";
                    messageArea.className = "message"; // Reset color
                });
            });

            row.querySelector(".yes-btn").addEventListener("click", () => {
                if (currentAction === "cancel") {
                    window.location.href = `/CancelBooking/CancelAction`;
                    messageArea.textContent = "Booking has been cancelled.";
                    messageArea.className = "message red";
                } else if (currentAction === "residual") {
                    messageArea.textContent = "Booking marked as residual.";
                    messageArea.className = "message green";
                }
                confirmBox.style.display = "none";
            });

            row.querySelector(".no-btn").addEventListener("click", () => {
                messageArea.textContent = "No action taken.";
                messageArea.className = "message";
                confirmBox.style.display = "none";
            });
        });
    </script>

